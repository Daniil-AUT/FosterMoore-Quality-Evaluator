{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",  
      "dest": "https://fostermoore-quality-evaluator.onrender.com/api/$1"  
    },
    {
      "src": "/(.*)",  
      "dest": "/frontend/build/$1"
    }
  ]
}
